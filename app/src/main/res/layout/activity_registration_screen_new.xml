<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.RegistrationScreenNew">

    <data>
        <import type="android.view.View" />
        <!-- Define variables or observable data models if needed -->
        <variable
            name="viewModel"
            type="com.programminginmyway.todoappnew.RegistrationViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edittext_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:drawableEnd="@drawable/ic_baseline_email_24"
                android:hint="@string/hint_edittext_email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:text="@={viewModel.email}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="25dp"
                android:text="@{viewModel.emailError}"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="@{viewModel.emailError != null ? View.VISIBLE : View.GONE}"
                tools:text="Please enter a valid email" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:text="@string/text_note_email" />

            <EditText
                android:id="@+id/edittext_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:drawableEnd="@drawable/ic_baseline_smartphone_24"
                android:hint="@string/hint_edittext_full_name"
                android:inputType="text"
                android:minHeight="48dp"
                android:text="@={viewModel.fullName}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="25dp"
                android:text="@{viewModel.fullNameError}"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="@{viewModel.fullNameError != null ? View.VISIBLE : View.GONE}"
                tools:text="Full name required" />

            <EditText
                android:id="@+id/edittext_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:drawableEnd="@drawable/ic_baseline_person_24"
                android:hint="@string/hint_edittext_mobile_number"
                android:inputType="phone"
                android:minHeight="48dp"
                android:text="@={viewModel.mobileNo}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="25dp"
                android:text="@{viewModel.mobileNoError}"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="@{viewModel.mobileNoError != null ? View.VISIBLE : View.GONE}"
                tools:text="Enter a valid 10-digit number" />

            <EditText
                android:id="@+id/edittext_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:hint="@string/hint_edittext_password"
                android:inputType="textPassword"
                android:maxLength="16"
                android:minHeight="48dp"
                android:text="@={viewModel.password}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="25dp"
                android:text="@{viewModel.passwordError}"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="@{viewModel.passwordError != null ? View.VISIBLE : View.GONE}"
                tools:text="Password cannot be empty" />

            <EditText
                android:id="@+id/edittext_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:hint="@string/hint_edittext_confirm_password"
                android:inputType="textPassword"
                android:maxLength="16"
                android:minHeight="48dp"
                android:text="@={viewModel.confirmPassword}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="25dp"
                android:text="@{viewModel.confirmPasswordError}"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="@{viewModel.confirmPasswordError != null ? View.VISIBLE : View.GONE}"
                tools:text="Passwords do not match" />

            <Button
                android:id="@+id/button_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"
                android:onClick="@{() -> viewModel.onRegisterClicked()}"
                android:text="@string/button_text_register"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</layout>